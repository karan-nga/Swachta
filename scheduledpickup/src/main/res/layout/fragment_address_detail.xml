<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressDetailFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sanregular"
            android:gravity="center"
            android:text="Address "
            android:textColor="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/address_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:hint="First Name"
            android:padding="15dp" />

        <EditText
            android:id="@+id/address_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:hint="Last Name"
            android:padding="15dp" />

        <EditText
            android:id="@+id/address_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_contacts_24"
            android:drawablePadding="20dp"
            android:hint="Contact Number"
            android:padding="15dp" />

        <EditText
            android:id="@+id/address_houseno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_house_24"
            android:drawablePadding="20dp"
            android:hint="House Number"
            android:padding="15dp" />

        <EditText
            android:id="@+id/address_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="20dp"
            android:hint="Street/Landmark"
            android:padding="15dp" />
     <EditText
         android:id="@+id/address_city"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="10dp"
         android:drawableLeft="@drawable/ic_baseline_location_city_24"
         android:drawablePadding="20dp"
         android:hint="City/Town"
         android:padding="15dp" />
     <EditText
         android:id="@+id/address_state"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="10dp"
         android:drawableLeft="@drawable/ic_baseline_location_city_24"
         android:drawablePadding="20dp"
         android:hint="State"
         android:padding="15dp" />

        <EditText
            android:id="@+id/address_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="20dp"
            android:hint="Pincode"
            android:padding="15dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/address_saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sanregular"
            android:text="Register"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#000000"/>

    </LinearLayout>


</ScrollView>